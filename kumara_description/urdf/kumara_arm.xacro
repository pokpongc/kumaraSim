<?xml version="1.0"?>
<robot name="Kumara" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="$(find kumara_description)/urdf/materials.xacro" />
    <xacro:include filename="$(find kumara_description)/urdf/kumara_properties.xacro" />
    <xacro:include filename="$(find kumara_description)/urdf/kumara.gazebo" />

    <link name="arm_base">
		<inertial>
			<mass value = "1"/>
			<inertia ixx = "0.26" iyy = "0.26" izz = "0.01" ixy = "0" ixz = "0" iyz = "0"/>
		</inertial>
        <visual>
            <geometry>
                <mesh filename="package://kumara_description/meshes/arm/base_link.STL" scale="1 1 1"/>
            </geometry>
        </visual>
    </link>

    <link name="link_1">
		<inertial>
            <origin rpy="${PId2} 0 0" xyz = "0 0 ${L1}"/>
			<mass value = "1"/>
			<inertia ixx = "0.26" iyy = "0.26" izz = "0.01" ixy = "0" ixz = "0" iyz = "0"/>
		</inertial>
        <visual>
            <origin rpy="${PId2} 0 0" xyz = "0 0 ${L1}"/>
            <geometry>
                <mesh filename="package://kumara_description/meshes/arm/link_1.STL" scale="1 1 1"/>
            </geometry>
        </visual>
    </link>

    <link name="link_2">
		<inertial>
            <origin rpy="-${PId2} 0 ${PId2}"/>
			<mass value = "1"/>
			<inertia ixx = "0.26" iyy = "0.26" izz = "0.01" ixy = "0" ixz = "0" iyz = "0"/>
		</inertial>
        <visual>
            <origin rpy="-${PId2} 0 ${PId2}"/>
            <geometry>
                <mesh filename="package://kumara_description/meshes/arm/link_2.STL" scale="1 1 1"/>
            </geometry>
        </visual>
    </link>

    <link name="link_3">
		<inertial>
            <origin rpy="-${PId2} 0 -${PId2}" xyz = "0 0 ${L2}"/>
			<mass value = "1"/>
			<inertia ixx = "0.26" iyy = "0.26" izz = "0.01" ixy = "0" ixz = "0" iyz = "0"/>
		</inertial>
        <visual>
            <origin rpy="-${PId2} 0 -${PId2}" xyz = "0 0 ${L2}"/>
            <geometry>
                <mesh filename="package://kumara_description/meshes/arm/link_3.STL" scale="1 1 1"/>
            </geometry>
        </visual>
    </link>

    <link name="link_4">
		<inertial>
            <origin rpy="${PId2} 0 ${PId2}"/>
			<mass value = "1"/>
			<inertia ixx = "0.26" iyy = "0.26" izz = "0.01" ixy = "0" ixz = "0" iyz = "0"/>
		</inertial>
        <visual>
            <origin rpy="${PId2} 0 ${PId2}"/>
            <geometry>
                <mesh filename="package://kumara_description/meshes/arm/link_4.STL" scale="1 1 1"/>
            </geometry>
        </visual>
    </link>

    <link name="link_5">
		<inertial>
            <origin xyz="0 0 ${L3}"/>
			<mass value = "1"/>
			<inertia ixx = "0.26" iyy = "0.26" izz = "0.01" ixy = "0" ixz = "0" iyz = "0"/>
		</inertial>
        <visual>
            <origin xyz="0 0 ${L3}"/>
            <geometry>
                <mesh filename="package://kumara_description/meshes/arm/link_5.STL" scale="1 1 1"/>
            </geometry>
        </visual>
    </link>

    <joint name="arm_base_to_link_1" type="revolute">
        <parent link="arm_base"/>
        <child link="link_1"/>
        <axis xyz = "0 0 1"/>
        <limit lower = "-${PI}" upper = "${PI}" effort = "50" velocity = "10"/>
    </joint>

    <joint name="link_1_to_link_2" type="revolute">
        <parent link="link_1"/>
        <child link="link_2"/>
        <axis xyz = "0 0 1"/>
        <origin rpy="${PId2} 0 0" xyz = "0 0 0.13764"/>
        <limit lower = "-${PI}" upper = "${PI}" effort = "50" velocity = "10"/>
    </joint>

    <joint name="link_2_to_link_3" type="revolute">
        <parent link="link_2"/>
        <child link="link_3"/>
        <axis xyz = "0 0 1"/>
        <origin rpy="-${PId2} 0 ${PId2}"/>
        <limit lower = "-${PI}" upper = "${PI}" effort = "50" velocity = "10"/>
    </joint>

    <joint name="link_3_to_link_4" type="revolute">
        <parent link="link_3"/>
        <child link="link_4"/>
        <axis xyz = "0 0 1"/>
        <origin rpy="-${PId2} 0 -${PId2}" xyz = "0 0 0.27597"/>
        <limit lower = "-${PI}" upper = "${PI}" effort = "50" velocity = "10"/>
    </joint>

    <joint name="link_4_to_link_5" type="revolute">
        <parent link="link_4"/>
        <child link="link_5"/>
        <axis xyz = "0 0 1"/>
        <origin rpy="${PId2} 0 ${PId2}"/>
        <limit lower = "-${PI}" upper = "${PI}" effort = "50" velocity = "10"/>
    </joint>
</robot>